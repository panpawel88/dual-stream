        {
          "name": "4k_30fps_performance",
          "video_paths": [
            "test_videos/4k_video1_red_square.mp4",
            "test_videos/4k_video2_blue_circle.mp4"
          ],
          "algorithm": "keyframe-sync", 
          "duration_seconds": 20,
          "test_type": "performance",
          "expected_fps": 30
        },
        {
          "name": "4k_60fps_stress_test",
          "video_paths": [
            "test_videos/4k_60fps_video1_red_square.mp4",
            "test_videos/4k_60fps_video2_blue_circle.mp4"  
          ],
          "algorithm": "predecoded",
          "duration_seconds": 15,
          "test_type": "performance",
          "expected_fps": 60
        }
      ]
    },
    {
      "name": "algorithm_comparison",
      "description": "Compare all algorithms with identical videos",
      "tests": [
        {
          "name": "algorithm_latency_comparison",
          "video_paths": [
            "test_videos/video4_bouncing_ball.mp4",
            "test_videos/video3_gradient.mp4"
